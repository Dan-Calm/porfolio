---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import SectionContainer from '../components/SectionContainer.astro';
import Badge from '../components/Badge.astro';
import LinkedIn from '../icons/LinkedIn.astro';
import SocialPill from '../icons/SocialPill.astro';
import Mail from '../icons/Mail.astro';
import Experience from '../components/Experience.astro';
import Briefcase from '../icons/Briefcase.astro';
import Code from '../icons/Code.astro';

---

<Layout 
	title="Porfolio de Daniel - Programador y Analista"
	description="Desarrollo de aplicacaciones y sitios web personalizados"
>
	<main>
		<SectionContainer class="py-44 pb-12">
			<img 
				class="rounded-full w-12 h-12 mb-4"
				src="https://iamthepiratequeen.wordpress.com/wp-content/uploads/2010/12/luffy.jpg" 
				alt="daniel photo" 
    		/>
			<h1 class="text-white text-5xl font-bold flex flex-row gap-x-4 pb-10">
				Hola, soy Daniel 
				<a 
					href="https://www.linkedin.com/in/daniel-calderon-927573260/"
					target="_blank"
					rel="noopener"
					class="flex justify-center items-center"
				>
					<Badge>Disponible para trabajar</Badge>
				</a>
			</h1>
			<h2 class="text-2xl opacity-80 text-wrap">
				+2 años de experiencia. 
				<span class="text-yellow-200/90">
					Estudiante de Programación.
				</span> 
				<span class="text-red-200/90">
					De Santiago, Chile.
				</span>
				<span class="opacity-75">
					Desarrollo de aplicaciones y sitios web personalizados.
				</span>
			</h2>
			<nav class="flex gap-x-4 mt-6">
				<SocialPill href="https://www.linkedin.com/in/daniel-calderon-927573260/">
					<LinkedIn class="size-6"/>
					LinkedIn
				</SocialPill>
				<SocialPill href="https://www.linkedin.com/in/daniel-calderon-927573260/">
					<LinkedIn class="size-6"/>
					Git
				</SocialPill>
				<SocialPill href="mailto:daniel.calderonm95@gmail.com">
					<Mail class="size-6"/>
					daniel.calderonm95@gmail.com
				</SocialPill>
			</nav>
		</SectionContainer>

		<SectionContainer id="experiencia">
			<h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
				<Briefcase class="size-7" />
				Experiencia laboral
			</h2>
			<Experience />
		</SectionContainer>

		<SectionContainer id="proyectos">
			<h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
				<Code class="size-7" />
				Proyectos
			</h2>
			<Experience />
		</SectionContainer>
	</main>
</Layout>
